{
  "include": [
    "src/**/*.ts",
    "@types/*.d.ts"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
